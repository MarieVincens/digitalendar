{% extends 'base.html.twig' %}

{% block title %}Digitalendar{% endblock %}


{% block body %}
    <main role="main">

        <section class="jumbotron text-center">
            <div class="container">
                <h1 class="jumbotron-heading">Digitalendar</h1>
                <p class="lead text-muted">Votre agenda d'événements autour du digital</p>
                <p>
                    <a href="#events" class="btn btn-primary my-2">Les prochains événements</a>
                    <a href="" class="btn btn-secondary my-2">Tous les événements</a>
                </p>
            </div>
        </section>

        <div id="events" class="album py-5 bg-light">
            <div class="container">

                <h2>Les prochains événements</h2>

                <div class="row">

                    {% for event in events %}

                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img src="{{ event.picture }}" alt="{{ event.picture }}">
                                <div class="card-body">
                                    <h3 class="card-text">{{ event.title }}</h3>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="{{ path('event_show', {slug: event.slug})}}" class="btn btn-sm btn-outline-secondary">Voir</a>
                                            <a href="#" class="btn btn-sm btn-outline-secondary">Modifier</a>
                                        </div>
                                        <small class="text-muted">{{ event.city.name }}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    {% endfor %}

                </div>
            </div>
        </div>

    </main>
{% endblock %}
