{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
<main role="main">

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">
                <div class="col-md-4">
                    <img src="{{ asset('uploads/' ~ event.picture) }}" alt="{{ event.picture }}">
                </div>
                <div class="col-md-8">
                    <h1>{{ event.title }}</h1>
                    <span class="badge badge-pill badge-secondary" data-toggle="tooltip" data-placement="top" title="Ville">
                        <i class="fa fa-map-pin"></i>
                        {{ event.city.name }}
                    </span>
                    <span class="badge badge-pill badge-secondary" data-toggle="tooltip" data-placement="top" title="Dates">
                        <i class="fa fa-calendar"></i>
                        Du {{ event.DateStart|date('d')}} au {{ event.DateEnd|date('d M Y')}}
                    </span>
                    <span class="badge badge-pill badge-secondary" data-toggle="tooltip" data-placement="top" title="Participants">
                        <i class="fa fa-users"></i>
                        {{ event.participants.count }}

                    </span>
                    {% if event.url != NULL %}
                    <a href="https://{{ event.url }}" class="badge badge-pill badge-primary" data-toggle="tooltip" data-placement="top" title="Site internet">
                        <i class="fa fa-globe"></i>
                        Site Internet
                    </a>
                    {% endif %}
                    <span class="badge badge-pill badge-secondary" data-toggle="tooltip" data-placement="top" title="Prix">
                        <i class="fa fa-euro"></i>
                        {{ event.price }}
                    </span>

                    <p>{{ event.description }}</p>

                    {% if participant != null%}
                    <a href="{{ path('participant_new', {slug: event.slug}) }}" class="btn btn-danger btn-lg">J'y vais plus!</a>
                    {% else %}
                    <a href="{{ path('participant_new', {slug: event.slug}) }}" class="btn btn-primary btn-lg">J'y vais!</a>

                    {% endif %}

                </div>
            </div>

        </div>
    </div>

</main>
{% endblock %}
