<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %} {{ encore_entry_link_tags('app') }}{% endblock %}
    </head>
    <body>
    <div class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container d-flex justify-content-between">
            <a href="{{ path('homepage') }}" class="navbar-brand d-flex align-items-center">
                <strong>Digitalendar</strong>
            </a>
            <nav class="my-2 my-md-0">
                <a class="p-2 text-white" href="{{ path('event_index') }}">Les événements</a>
                <a class="p-2 text-white" href="add-event.html">Proposer un événement</a>
                {% if app.user %}
                    <a class="p-2 text-white" href="#">Mon Compte</a>
                    <a class="p-2 text-white" href="{{ path('app_logout') }}">Deconnexion</a>
                {% else %}
                    <a class="p-2 text-white" href="{{ path('app_login') }}">Connexion</a>
                {% endif %}
            </nav>
        </div>
    </div>

        {% block body %}{% endblock %}

    <footer class="text-muted">
        <div class="container">
            <p class="float-right">
                <a href="#">Haut de page</a>
            </p>
            <p>&copy; Digitalendar 2019</p>
        </div>
    </footer>

        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
    </body>
</html>
